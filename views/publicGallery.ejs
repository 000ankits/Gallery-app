<% include ./partials/header %>

<div class="jumbotron">
    <h1 class="text-center">Picture Gallery</h1>
</div>

<div class="row">
    <% images.forEach((img)=>{ %>
    <% if(img.privacy === "public"){ %>
    <div id="divColumn" class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-2">
        <a href="/gallery/<%= img._id %>"><img id="thumbnail" class="img-thumbnail" src="/hidden/<%= img._id %>"
                alt="Image"></a>
    </div>
    <% } %>
    <% }) %>
</div>


<% include ./partials/footer %>